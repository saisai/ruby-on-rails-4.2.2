<h1><%= content_for(:title, "Jobs Db") %></h1>
<table class="table table-striped">
<thead>
	<tr>
		<th>No</th>
		<th>Title</th>
		<th>Time</th>
	</tr>
</thead>
<tbody>
	<!-- multiline comments -->
	<!-- 
	<%= WillPaginate.per_page %>
	<%= @jobsdb.count %>
	<%= @jobsdb.total_entries %>
	<%= params %>
	 -->
	
	<% if params[:page].to_i == 0 %>
	<% id = 1 %>
	<% elsif params[:page].to_i == 1  %>
	<% id =  1 %>
	<% elsif params[:page].to_i > 1 %>
	<% result = params[:page].to_i - 1 %>
	<% id = (WillPaginate.per_page  * result ) + 1 %>
	<% end %>
	
	
	<% @jobsdb.each do |test| %>
	<tr>
		<td><%= id %></td>
		<td><a href="<%= test.link %>" target="_blank"><%= test.title %></a></td>
		<td><%= test.time %></td>
	</tr>
	<% id += 1 %>
	<% end %>
</tbody>

</table>

<div class="text-center">
 <%= will_paginate @jobsdb, renderer: BootstrapPagination::Rails %>
</div>